@model LastLinkedin.Models.ApplicationUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Profile.cshtml";
}
@section updateinfo{
    <a href="#" style="text-decoration:none">
        <i class="fas fa-pen" data-toggle="modal" data-target="#updateinfomodal" style="position:absolute; right:40px;"></i>
    </a>
}

@section userdata{
    <div id="data">
        @Html.Action("GetData", new { id = Model.Id })



    </div>
}

@section addexperience{
    <a href="#" style="position:absolute; right:20px;">
        <i class="fas fa-plus" data-toggle="modal" data-target="#addExperience"></i>
    </a>


}

@section experience{


    <div id="experience">


        @Html.Action("GetExperiences", new { id = Model.Id })

    </div>
}
@section recomds{
    <input type="button" value="Recommend someone" class="btn btn-secondary" data-target="#createRecommendationModal" data-toggle="modal" style="margin:5px 5px"/>
    @*<input type="button" value="AskForRecommendation" class="btn btn-secondary" style="margin:5px 5px" />*@
}

@section Recommendations{
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Recieved</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Given</a>
        </li>

    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="recieved" role="tabpanel" aria-labelledby="home-tab">@Html.Action("RecievedRecommendation")</div>
        <div class="tab-pane fade" id="given" role="tabpanel" aria-labelledby="profile-tab">
       @*     @Html.Action("GivenRecommendation")*@
        </div>
    </div>
}

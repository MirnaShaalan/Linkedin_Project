<div id="updateinfomodal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="float:left">Update info</h4>
            </div>
            <div class="modal-body" id="updateinfo">
                @Html.Partial("Editintro")

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div id="addExperience" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="float:left">Update info</h4>
            </div>
            <div class="modal-body" id="updateinfo">
                @Html.Action("AddExperience")

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div class="modal fade" id="editExperiencemodal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Experience</h4>
            </div>
            <div class="modal-body" id="editdata">
            

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div id="createRecommendationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="float:left">Create Recommendation</h4>
            </div>
            <div class="modal-body" id="updateinfo">
                @Html.Action("CreateRecommendation",new { id = Model.Id })

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


@section scripts{
    <script>
        function editintro() {
            $("#updateinfomodal").modal("toggle");
        }

        function addExperiencefun() {
            $("#addExperience").modal("toggle");
        }

        function updateExperience() {
            $("#editExperiencemodal").modal("toggle");
        }

        function createRecommendfun() {
            $("#createRecommendationModal").modal("toggle");
        }


    </script>
}
